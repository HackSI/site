<div class="l-content">
    <div class="pricing-tables pure-g-r">
        <div class="pure-u-1 pure-u-lg-1-1">
            <div class="l-box">
                <table class="pure-table">
                    <thead>
                        <tr>
                            <th>Host</th>
                            <th>IP</th>
                            <th>Added</th>
                            <th>From</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each machines}}
                        <tr>
                            <td>{{host}}</td>
                            <td>{{ip}}</td>
                            <td>{{stamp}}</td>
                            <td>{{from}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
             </div>
         </div>
    </div>
</div>
